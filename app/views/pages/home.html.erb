<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.2/css/all.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
  <title>Home</title>
</head>
<body>
  <section class="banner">
    <div class="container">
      <h1>ReCloset</h1>
      <h3>Revamp your closet. Fashion for everyone.</h3>
    </div>
  </section>

  <section class="container-fluid" class="categories">
    <h3 class="section-header">Browse Products by Category</h3>
    <div class="row">
      <% 6.times do %>
        <div class="col-lg-2">
          <div class="rectangle">
          <p>Category</p>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <section class="cards container-fluid">
    <h3 class="section-header">New Products</h3>
    <div class= "container-fluid">
      <div class="row gx-5 gy-5">
        <% 8.times do %>
          <div class="col-lg-3">
            <%= render "items/item-card" %>
          </div>
        <% end %>
      </div>
    </div>
  </section>

</body>
</html>
